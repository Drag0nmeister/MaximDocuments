<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<VBox prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="documents.controller.DocumentDetailsController">
    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
    </padding>
    <TextArea fx:id="detailsArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS"/>
    <HBox alignment="BOTTOM_RIGHT">
        <Button text="ОК" onAction="#closeWindow" minWidth="150"/>
    </HBox>
</VBox>
